<section class="one-beer-container">
  <div class="one-beer">
    <img alt="{{beer.name}}" src={{beer.image_url}}>
    <div class="one-beer-description">
      <h2>{{beer.name}}</h2>
      <h4 id="tagline">{{beer.tagline}}</h4>
      <p>{{beer.description}}</p>
      <h4>Food pairing</h4>
      <ul>{{#each beer.food_pairing}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      <h4>Brewers tips</h4>
      <p>{{beer.brewers_tips}}</p>
    </div>
  </div>

</section>